.color{
    padding: 0 !important;
    border: none !important;
}
.color-body::before {
  display: none;
}
.color-col{
    margin-bottom: 16px;
}
.color-item{
    width: 100%;
    color: #fff;
    border-radius: 5px;
}
.color-item.dark{
    color: #657180;
}
.color-item-title{
    padding: 6px 6px 0;
    font-size: 14px;
}
.color-item-content{
    padding: 6px;
    font-size: 12px;
    opacity: 0.7;
}

.color-item.primary{
    background: #FFB700;
}
.color-item.light-primary{
    color: #FFB700;
    background: #FFF5D9;
}
.color-item.primary-blue {
    background: #4D5AFC;
    color: #FFFFFF;
}
.color-item.success{
    background: #66D0AA;
}
.color-item.warning{
    background: #FF9A4E;
}
.color-item.error{
    background: #FC5528;
}
.color-item.title{
    background: #333333;
}
.color-item.content{
    background: #4C4E52;
}
.color-item.sub-color{
    background: #6E6F73;
}
.color-item.disabled{
    background: #B6B7B9;
}
.color-item.border{
    background: #dddee1;
}
.color-item.divider{
    background: #e9eaec;
}
.color-item.background{
    background: #f8f8f9;
}