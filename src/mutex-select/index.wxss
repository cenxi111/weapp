.ellipsis {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap
}

.i-select {
    background: #fff;
    font-size: 14px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px
}

.i-select-hd {
    position: relative;
    display: flex;
    height: 44px;
    align-items: center;
    background: #fff;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px
}

.i-select-hd__action {
    width: 0;
    flex: 0 0 120rpx;
    padding: 0 10px;
    height: 44px;
    line-height: 44px;
    text-align: center;
    box-sizing: border-box;
    font-size: 14px
}

.i-select-hd__action.primary {
    color: #ffb700
}

.i-select-hd__title {
    flex: 1;
    font-size: 16px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    box-sizing: border-box
}

.i-select-hd::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    transform: scale(.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #e9eaec;
    border-bottom-width: 1px
}

.i-select-options {
    height: 196px;
    background: #E9EAEC;
    padding:0 2%;
    box-sizing: border-box;
}

.i-select-options-item {
    float: left;
    width: 24.25%;
    height:44px;
    margin-right: 1%;
    margin-top: 4px;
    background: #fff;
    text-align: center;
    line-height: 44px;
    position: relative;
    z-index: 1;
}
.i-select-options-item .i-select-options-item--overselected {
    width: 100%;
    height: 100%;
    background: #313131;
    opacity: 0.85;
    position: absolute;
    color: #FFFFFF;
    left: 0;
    top: 0;
    z-index: 10;
}
.i-select-options-item:nth-of-type(4n) {
    margin-right: 0;
}

.i-select-options-item__label {
    flex: 1;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap
}

.i-select-options-item__icon {
    flex: 0 0 32px;
    width: 32px;
    text-align: right;
    visibility: hidden
}

.i-select-options-item--active {
    color: #ffb700
}

.i-select-options-item--active .i-select-options-item__icon {
    visibility: visible
}

/* .i-select-options-item--disabled {
    color: #bbbec4
} */

.i-select-options-item--disabled .i-select-options-item__icon {
    color: #bbbec4 !important
}