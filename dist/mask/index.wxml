<view class="i-mask-wrap" catchtap="handleMaskClick" catchtouchmove="true"
    style="z-index: {{zIndex}};position:relative;">
    <i-animate
        id="i-mask"
        name="fade"
        show="{{visible}}"
        custom-class="i-mask {{visible ? 'is-show' : 'is-hide'}}"
        custom-style="z-index: {{zIndex}}; {{ mask ? 'background-color: rgba(0, 0, 0, .4);' : '' }} {{ customStyle }}"
        bind:trigger="trigger"
    ></i-animate>
</view>

